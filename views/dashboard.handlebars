<section class="row">
    <div class="column">

        <form class="new-entry-form">
            <h2>Create New Entry</h2>
            <div class="entry-title-block">
                <label class="entry-label" for="entry-title">Title </label>
                <input type="text" id="entry-title" name="entry-title" />
            </div>
            <div class="entry-text-block">
                <label class="entry-label" for="entry-text">Text </label>
                <textarea id="entry-text" name="entry-text"></textarea>
            </div>
            <button type="submit" class="btn">Create</button>
        </form>
    </div>
    <div class="about-me column">
        <h2>About Me</h2>
        {{> user-info}}
    </div>

</section>

{{#if posts}}
<section>
    <h2 class="entry-title">Your entries</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> entry-info post }}
        </li>
        <a id="edit-entry" href="/dashboard/edit/{{post.id}}" class="edit-link">Edit entry</a>
        {{/each}}
    </ol>
</section>
{{/if}}

<!--Script to add an entry-->
<script src="/js/add-entry.js"></script>