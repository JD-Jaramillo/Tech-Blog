<section class="row">
    <div class="column">
        <h2>Create New Entry</h2>

        <form class="new-entry-form">
            <div>
                <label for="entry-title">Title</label>
                <input type="text" id="entry-title" name="entry-title" />
            </div>
            <div>
                <label for="entry-text">Text</label>
                <textarea id="entry-text" name="entry-text"></textarea>
            </div>
            <button type="submit" class="btn">Create</button>
        </form>
    </div>
    <div class="column">
        <h2>About Me</h2>
        {{> user-info}}
    </div>

</section>

{{#if entrys.length}}
<section>
    <h2>Your entry</h2>
    <ol>
        {{#each entrys as |entry| }}
        <li>
            {{> entry-info entry }}
            <a href="/dashboard/edit/{{entry.id}}" class="edit-link">Edit entry</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<!--Script to add an entry-->
<script src="/js/add-entry.js"></script>