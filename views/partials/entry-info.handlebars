<article class="entry">
  <div class="title">
    <span><a href="/entries/{{id}}">{{title}}</a></span><span style="float:right">Posted by {{user.username}} on
      {{format_date created_at}}</span><br>
    <span style="float:right">{{comments.length}} {{format_plural "comment" comments.length}}</span>
  </div>
  <div class="content">
    <p>{{entry_text}}</p>
  </div>
</article>